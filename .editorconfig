; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[{.drone.yml,.drone.sec.yml}]
indent_style = space
indent_size = 2